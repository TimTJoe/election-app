<%- include("./partials/head") %>
<div class="flexbody">
  <%- include("./partials/nav") %>

  <main class="centerized">
    <form action="/parties/registration" method="post" class="form" enctype="multipart/form-data">
      <fieldset>
        <legend>Party Registration</legend>
        <label for="party">Party Name:</label>
        <input
          type="text"
          id="party"
          name="party"
          placeholder="Enter party name"
          required
        />
        <br />
        <label for="logo">Party Logo:</label>
        <input type="file" id="logo" name="logo" required />
        <br />
        <br />
        <button type="submit" class="button">Register Party</button>
      </fieldset>
    </form>
  </main>
  <%- include("./partials/foot") %>
</div>
