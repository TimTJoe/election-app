<%- include("../partials/head") %> <%- include("../partials/nav") %>
<div class="container row max">
  <%- include("../partials/sidebar") %>
  <main class="main max relative">
    <header class="header toolbar row align sticky">
      <section class="max">
        <label for="elections">Select Election</label>
        <select name="elections" id="elections">
          <option value="">Block A General Elections</option>
          <option value="">Block B General Elections</option>
          <option value="">Block C General Elections</option>
        </select>
      </section>
      <section class="">
        <a href="elections/create" class="iconbutton">
          <i class="icon">&plus;</i>
          <span class="text">New Election</span>
        </a>
      </section>
    </header>
    <div class="body">
      <section>
        <nav class="tabs">
          <span class="title">Block A General Elections</span>
          <a href="elections/12345/parties" class="tabitem active">Parites</a>
          <a href="elections/12345/candidates" class="tabitem "
            >Candidates</a
          >
          <a href="elections/12345/voters" class="tabitem">Voters</a>
        </nav>
        <div class="tablist">
          <% data.voters.map((voter, key) => { %>
          <section class="tabitem" id="<%= voter.id %>">
            <span class="tabicon">
              <img src="/images/sample.png" alt="icon" class="tabimg" />
            </span>
            <span class="tabcontent max">
              <strong>
                <%= voter.first_name %> <%= voter.middle_name %>. <%=
                voter.last_name %>
              </strong>
              <small> <%= voter.DOB %> &middot; Male</small>
            </span>
          </section>
          <%}) %>
        </div>
      </section>
    </div>
  </main>
</div>
<%- include("../partials/foot") %>
